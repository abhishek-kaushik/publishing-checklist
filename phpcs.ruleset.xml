<?xml version="1.0"?>
<ruleset name="Publishing Checklist">
	<description>Sniffs for the coding standards of the Publishing Checklist</description>

	<rule ref="WordPress-VIP">
		<exclude name="WordPress.CSRF.NonceVerification" />
		<exclude name="WordPress.WhiteSpace.ControlStructureSpacing" />
